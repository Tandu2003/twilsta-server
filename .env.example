# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=8080
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/twilsta_db?schema=public"

# Security & JWT
JWT_ACCESS_SECRET=your-super-secret-access-token-key-here-must-be-very-long
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here-must-be-very-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Cookie Configuration
ACCESS_TOKEN_COOKIE_NAME=twilsta_auth_token
REFRESH_TOKEN_COOKIE_NAME=twilsta_refresh_token
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Twilsta <noreply@twilsta.com>"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Verification URLs
FRONTEND_URL=http://localhost:3000
VERIFY_EMAIL_URL=http://localhost:3000/verify-email
RESET_PASSWORD_URL=http://localhost:3000/reset-password
